{% extends 'base.html.twig' %}

{% block title %}Mes adresses - CoreFit{% endblock %}

{% block content %}
    <a href="{{ path('account') }}">Retourner à mon compte</a>
<div class="text-center">
    <h1>Mes adresses</h1>

    C'est dans cet espace que vous allez pouvoir gérer toutes vos adresses</p><br>
    <a href="{{ path('account_adress_add') }}" class="btn btn-info btn-small float-right">Ajouter une adresse</a>
    
</div>
    <hr>

    {% if app.user.adresses|length == 0 %}
    <p class="text-center">Vous n'avez pas encore ajouté d'adresse dans votre compte client.<br>
    Pour en ajouter une, veuillez <a href:"{{path('account_adress_add')}}">Cliquez ici</a>.</p>
    {% else %}
        <div class="row">
        {% for adress in app.user.adresses %}
            <div class="col-md-4">
             <div class="card-adress">
                <div class="card-body">
                    <h5 class="card-title">{{adress.name}}</h5>
                    <p class="card-text">
                        {{adress.adress}}<br>
                        {{adress.city}} - 
                        {{adress.country}}<br>
                        {{adress.phone}}
                    </p>
                    <a href="{{ path('account_adress_edit', { 'id' : adress.id }) }}">Modifier</a> | <a href="{{ path('account_adress_delete', { 'id' : adress.id }) }}">Supprimer</a>
                </div>
            </div>
            </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
